<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout style="@style/DetailRow">

            <TextView
                style="@style/DetailLabelTextView"
                android:layout_weight="0.25"
                android:text="@string/name" />

            <TextView
                android:id="@+id/customer_detail_name"
                style="@style/DetailInformationTextView"
                android:layout_weight="0.75"
                tools:text="klk" />
        </LinearLayout>

        <LinearLayout style="@style/DetailRow">

            <TextView
                style="@style/DetailLabelTextView"
                android:layout_weight="0.25"
                android:text="@string/number" />

            <TextView
                android:id="@+id/customer_detail_number"
                style="@style/DetailInformationTextView"
                android:layout_weight="0.75"
                tools:text="klk" />
        </LinearLayout>

        <LinearLayout style="@style/DetailRow">

            <TextView
                style="@style/DetailLabelTextView"
                android:layout_weight="0.25"
                android:text="@string/address" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_detail_addressline1"
                    style="@style/DetailInformationAddressTextView"
                    tools:text="klk" />

                <TextView
                    android:id="@+id/customer_detail_addressline2"
                    style="@style/DetailInformationAddressTextView"
                    tools:text="klk" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/DetailRow">

            <TextView
                style="@style/DetailLabelTextView"
                android:layout_weight="0.25"
                android:text="@string/city" />

            <TextView
                android:id="@+id/customer_detail_city"
                style="@style/DetailInformationTextView"
                android:layout_weight="0.75"
                tools:text="klk" />
        </LinearLayout>

        <LinearLayout style="@style/DetailRow">

            <TextView
                style="@style/DetailLabelTextView"
                android:layout_weight="0.25"
                android:text="@string/state" />

            <TextView
                android:id="@+id/customer_detail_state"
                style="@style/DetailInformationTextView"
                android:layout_weight="0.75"
                tools:text="klk" />
        </LinearLayout>

        <LinearLayout style="@style/DetailRow">

            <TextView
                style="@style/DetailLabelTextView"
                android:layout_weight="0.5"
                android:text="@string/postalcode" />

            <TextView
                android:id="@+id/customer_detail_PostalCode"
                style="@style/DetailInformationTextView"
                android:layout_weight="0.75"
                tools:text="klk" />
        </LinearLayout>

        <LinearLayout style="@style/DetailRow">

            <TextView
                style="@style/DetailLabelTextView"
                android:layout_weight="0.25"
                android:text="@string/country" />

            <TextView
                android:id="@+id/customer_detail_country"
                style="@style/DetailInformationTextView"
                android:layout_weight="0.75"
                tools:text="klk" />
        </LinearLayout>

        <LinearLayout style="@style/DetailRow">

            <TextView
                style="@style/DetailLabelTextView"
                android:layout_weight="0.5"
                android:text="@string/CredLim" />

            <TextView
                android:id="@+id/customer_detail_CreditLimit"
                style="@style/DetailInformationTextView"
                android:layout_weight="0.75"
                tools:text="klk" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>